{
    "name": "conpa",
    "description": "Asset allocation application",
    "version": "4.3.0",
    "main": "index",
    "repository": "http://github.com/albertosantini/node-conpa",
    "keywords": [
        "finance",
        "asset allocation",
        "optimization"
    ],
    "author": "Alberto Santini",
    "license": "MIT",
    "engines": {
        "node": ">=5.x"
    },
    "scripts": {
        "start": "npm-run-all --parallel backend pouchdb",
        "now-start": "npm run backend & npm run pouchdb",
        "backend": "node src/server/app.js",
        "pouchdb": "cd ./db && pouchdb-server --sqlite",
        "test": "npm run lint",
        "lint": "eslint index.js src/**/*.js",
        "dump": "cd ./db && pouchdb-dump http://localhost:5984/conpa -o dump.txt",
        "import": "cd ./db && node load.js"
    },
    "dependencies": {
        "npm-run-all": "~4.0.1",

        "body-parser": "~1.16.0",
        "express": "~4.14.0",
        "finance": "~3.0.0",

        "angular": "~1.6.1",
        "angular-animate": "~1.6.1",
        "angular-aria": "~1.6.1",
        "angular-messages": "~1.6.1",
        "angular-sanitize": "~1.6.1",
        "angular-material": "~1.1.1",
        "angular-local-storage": "~0.5.0",

        "sqlite3": "~3.1.8",
        "pouchdb-server": "~2.0.1",
        "pouchdb-dump-cli": "~2.0.6",
        "pouchdb-load": "~1.4.6"
    },
    "devDependencies": {
        "eslint": "^3.14.0",
        "eslint-config-eslint": "~3.0.0",
        "eslint-plugin-angular": "~1.6.1"
    }
}
