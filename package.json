{
    "name": "conpa",
    "description": "Asset allocation application",
    "version": "4.8.0",
    "main": "index",
    "repository": "http://github.com/albertosantini/node-conpa",
    "keywords": [
        "finance",
        "asset allocation",
        "optimization"
    ],
    "author": "Alberto Santini",
    "license": "MIT",
    "engines": {
        "node": ">=8.x"
    },
    "scripts": {
        "start": "npm-run-all --parallel backend pouchdb create-empty-db import",
        "now-start": "npm run backend",
        "backend": "node src/server/app.js",
        "pouchdb": "cd ./db && pouchdb-server --in-memory",
        "test": "npm run lint",
        "lint": "eslint index.js src/**/*.js",
        "dump": "cd ./db && couchbackup --url http://localhost:5984 --db conpa -o dump.txt",
        "create-empty-db": "sleep 5 && curl -X PUT http://localhost:5984/conpa",
        "import": "cd ./db && sleep 10 && cat dump.txt | couchrestore --url http://localhost:5984 --db conpa",
        "deploy": "now deploy --public && now alias"
    },
    "now": {
        "alias": "conpa",
        "env": {
            "CONPA_LIVE_URL": "@conpa_live_url",
            "CONPA_TEST_URL": "@conpa_test_url"
        }
    },
    "dependencies": {
        "angular": "^1.7.0",
        "angular-animate": "^1.7.0",
        "angular-aria": "^1.7.0",
        "angular-local-storage": "^0.7.1",
        "angular-material": "^1.1.9",
        "angular-messages": "^1.7.0",
        "angular-sanitize": "^1.7.0",
        "body-parser": "^1.18.2",
        "express": "^4.16.3",
        "express-rate-limit": "^2.11.0",
        "finance": "^4.0.0"
    },
    "devDependencies": {
        "@cloudant/couchbackup": "^2.2.0",
        "eslint": "^4.19.1",
        "npm-run-all": "^4.1.3",
        "pouchdb-server": "^4.0.0"
    }
}
